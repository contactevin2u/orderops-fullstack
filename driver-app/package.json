{
  "name": "driver-app",
  "version": "0.1.0",
  "private": true,
  "main": "expo-router/entry",
  "scripts": {
    "postinstall": "patch -p0 -N -r - || true",
    "start": "expo start",
    "android": "expo run:android",
    "android:prebuild": "CI=1 npx expo prebuild --platform android --clean",
    "android:bundle": "expo export:embed --platform android --dev false --reset-cache",
    "android:release": "cd android && ./gradlew assembleRelease",
    "test": "jest --passWithNoTests",
    "typecheck": "tsc --noEmit",
    "ci:prebuild:android": "expo prebuild --platform android --clean",
    "ci:bundle:android": "node node_modules/@expo/cli/build/bin/cli export:embed --platform android --dev false --reset-cache --entry-file node_modules/expo-router/entry.js",
    "ci:assemble:android": "cd android && ./gradlew assembleRelease --no-daemon"
  },
  "dependencies": {
    "@notifee/react-native": "^9.1.8",
    "@react-native-async-storage/async-storage": "^2.0.0",
    "@react-native-firebase/app": "^20.0.0",
    "@react-native-firebase/auth": "^19.0.0",
    "@react-native-firebase/messaging": "^19.0.0",
    "@tanstack/react-query": "^5.0.0",
    "expo": "^52.0.0",
    "expo-router": "^3.0.0",
    "react": "18.2.0",
    "react-native": "0.76.0",
    "react-native-gesture-handler": ">=2.12.0",
    "react-native-reanimated": "^3.10.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@babel/plugin-transform-inline-environment-variables": "npm:babel-plugin-transform-inline-environment-variables@^0.4.4",
    "@types/jest": "^29.0.0",
    "@types/react": "^18.2.0",
    "@types/react-native": "^0.72.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "babel-preset-expo": "^11.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0",
    "@react-native/js-polyfills": "^0.73.0"
  }
}
